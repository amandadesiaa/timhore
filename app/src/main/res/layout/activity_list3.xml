<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list3"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:onClick="back"
            android:backgroundTint="@color/black"
            android:background="@drawable/back"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:background="@drawable/gambar6"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:text="Pasokan listrik di Provinsi Lampung telah pulih dan normal 100 persen, listrik untuk seluruh pelanggan PLN telah menyala kembali pada hari Kamis tanggal 6 Juni 2024 dini hari pukul 00.59 WIB."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:text="General Manager PLN UID Lampung, Sugeng Widodo dan jajaran manajemen terus mengawal aktivitas pemulihan kelistrikan di Lampung hingga menyala 100 persen."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/gambar"
                android:layout_width="300dp"
                android:layout_marginTop="15dp"
                android:layout_height="300dp"
                android:layout_marginBottom="50dp"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>